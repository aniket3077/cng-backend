generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String
  phone        String?
  role         String    @default("customer")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  vehicles     Vehicle[]

  @@index([email])
}

model Vehicle {
  id         String   @id @default(cuid())
  userId     String
  plate      String
  plateHash  String?
  regionCode String?
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([plate])
}

model Station {
  id               String          @id @default(cuid())
  name             String
  address          String
  city             String
  state            String
  postalCode       String?
  lat              Float
  lng              Float
  fuelTypes        String
  isPartner        Boolean         @default(false)
  phone            String?
  openingHours     String?
  amenities        String?
  isVerified       Boolean         @default(false)
  subscriptionType String?
  cngAvailable     Boolean         @default(true)
  cngQuantityKg    Float?          @default(0)
  cngUpdatedAt     DateTime?
  ownerId          String?
  approvalStatus   String          @default("pending")
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  
  owner            StationOwner?   @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  subscriptions    Subscription[]
  supportTickets   SupportTicket[]
  documents        StationDocument[]
  
  @@index([lat, lng])
  @@index([city, state])
  @@index([isPartner])
  @@index([isVerified])
  @@index([ownerId])
  @@index([approvalStatus])
}

model Admin {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  role         String   @default("admin")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}

model Subscription {
  id          String    @id @default(cuid())
  stationId   String
  planType    String
  startDate   DateTime  @default(now())
  endDate     DateTime
  amount      Float     @default(0)
  status      String    @default("active")
  features    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  station     Station   @relation(fields: [stationId], references: [id], onDelete: Cascade)
  
  @@index([stationId])
  @@index([status])
  @@index([endDate])
}

model StationOwner {
  id                 String         @id @default(cuid())
  email              String         @unique
  passwordHash       String
  name               String
  phone              String
  companyName        String?
  gstNumber          String?
  panNumber          String?
  address            String?
  city               String?
  state              String?
  postalCode         String?
  status             String         @default("pending")
  emailVerified      Boolean        @default(false)
  phoneVerified      Boolean        @default(false)
  kycStatus          String         @default("pending")
  kycRejectionReason String?
  profileComplete    Boolean        @default(false)
  onboardingStep     Int            @default(1)
  lastLoginAt        DateTime?
  subscriptionType   String?
  subscriptionEndsAt DateTime?
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  
  stations           Station[]
  supportTickets     SupportTicket[]
  notifications      Notification[]
  activityLogs       ActivityLog[]
  paymentHistory     PaymentHistory[]
  
  @@index([email])
  @@index([status])
  @@index([kycStatus])
  @@index([subscriptionType])
  @@index([subscriptionEndsAt])
}

model StationDocument {
  id              String    @id @default(cuid())
  stationId       String
  documentType    String
  fileUrl         String
  fileName        String
  fileSize        Int?
  uploadedAt      DateTime  @default(now())
  verifiedAt      DateTime?
  verifiedBy      String?
  status          String    @default("pending")
  rejectionReason String?
  
  station         Station   @relation(fields: [stationId], references: [id], onDelete: Cascade)
  
  @@index([stationId])
  @@index([status])
}

model SupportTicket {
  id           String        @id @default(cuid())
  ticketNumber String        @unique
  subject      String
  description  String
  category     String
  priority     String        @default("medium")
  status       String        @default("open")
  ownerId      String?
  stationId    String?
  assignedTo   String?
  resolution   String?
  resolvedAt   DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  owner        StationOwner? @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  station      Station?      @relation(fields: [stationId], references: [id], onDelete: SetNull)
  replies      TicketReply[]
  
  @@index([ownerId])
  @@index([stationId])
  @@index([status])
  @@index([assignedTo])
  @@index([ticketNumber])
}

model TicketReply {
  id            String        @id @default(cuid())
  ticketId      String
  message       String
  isInternal    Boolean       @default(false)
  attachments   String?
  createdBy     String
  createdByType String
  createdAt     DateTime      @default(now())
  
  ticket        SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  @@index([ticketId])
  @@index([createdAt])
}

model Notification {
  id        String       @id @default(cuid())
  ownerId   String
  title     String
  message   String
  type      String
  category  String?
  isRead    Boolean      @default(false)
  actionUrl String?
  metadata  String?
  createdAt DateTime     @default(now())
  readAt    DateTime?
  
  owner     StationOwner @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  @@index([ownerId])
  @@index([isRead])
  @@index([createdAt])
}

model ActivityLog {
  id          String        @id @default(cuid())
  ownerId     String?
  adminId     String?
  stationId   String?
  action      String
  description String?
  ipAddress   String?
  userAgent   String?
  metadata    String?
  createdAt   DateTime      @default(now())
  
  owner       StationOwner? @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  
  @@index([ownerId])
  @@index([adminId])
  @@index([stationId])
  @@index([action])
  @@index([createdAt])
}

model PaymentHistory {
  id                    String    @id @default(cuid())
  ownerId               String
  razorpayOrderId       String    @unique
  razorpayPaymentId     String?
  razorpaySignature     String?
  planId                String
  planName              String
  amount                Float
  currency              String    @default("INR")
  status                String    @default("pending")
  subscriptionStartsAt  DateTime?
  subscriptionEndsAt    DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  owner                 StationOwner @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  @@index([ownerId])
  @@index([razorpayOrderId])
  @@index([status])
  @@index([createdAt])
}
